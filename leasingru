        const termValue = document.getElementById('termValue');
        
        const redemptionSlider = document.getElementById('redemptionSlider');
        const redemptionValue = document.getElementById('redemptionValue');
        const redemptionRub = document.getElementById('redemptionRub');
        
        const monthlyPaymentEl = document.getElementById('monthlyPayment');
        const taxSavingEl = document.getElementById('taxSaving');
        const ndsSaveEl = document.getElementById('ndsSave');
        const profitTaxSaveEl = document.getElementById('profitTaxSave');
        const totalAmountEl = document.getElementById('totalAmount');
        
        const sendToTelegramBtn = document.getElementById('sendToTelegramBtn');
        const callBtn = document.getElementById('callBtn');
        const saveScheduleBtn = document.getElementById('saveScheduleBtn');
        const paymentModal = document.getElementById('paymentModal');
        const closeModal = document.getElementById('closeModal');
        const paymentScheduleContent = document.getElementById('paymentScheduleContent');
        const downloadPdfBtn = document.getElementById('downloadPdfBtn');
        const printScheduleBtn = document.getElementById('printScheduleBtn');
        
        const phoneModal = document.getElementById('phoneModal');
        const phoneNumberText = document.getElementById('phoneNumberText');
        const copyPhoneBtn = document.getElementById('copyPhoneBtn');
        const callNowBtn = document.getElementById('callNowBtn');
        const closePhoneModal = document.getElementById('closePhoneModal');
        const copySuccess = document.getElementById('copySuccess');

        // Функции форматирования
        function formatNumber(num) {
            return Math.round(num).toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
        }

        function formatCurrency(num) {
            return formatNumber(num) + ' ₽';
        }

        // Функция для форматирования ввода денег
        function formatMoneyInput(value) {
            // Удаляем все нецифры
            let cleanValue = value.replace(/\D/g, '');
            // Ограничиваем максимальное значение
            const maxValue = 50000000;
            if (parseInt(cleanValue) > maxValue) {
                cleanValue = maxValue.toString();
            }
            // Форматируем с пробелами
            return cleanValue.replace(/\B(?=(\d{3})+(?!\d))/g, " ");
        }

        // Функция для парсинга форматированного числа
        function parseFormattedNumber(formatted) {
            return parseInt(formatted.replace(/\s/g, '')) || 0;
        }

        // Функция для обновления отображения сумм в рублях под процентами
        function updateAmountDisplays() {
            const carPrice = parseFormattedNumber(priceInput.value);
            
            // Обновление аванса в рублях
            const advancePercent = parseFloat(advanceSlider.value);
            const advanceAmount = Math.round(carPrice * advancePercent / 100);
            advanceRub.textContent = formatCurrency(advanceAmount);
            
            // Обновление выкупного платежа в рублях
            let redemptionPercent = parseFloat(redemptionSlider.value);
            // Ограничиваем максимум 15%
            if (redemptionPercent > 15) {
                redemptionPercent = 15;
                redemptionSlider.value = redemptionPercent;
            }
            const redemptionAmount = Math.round(carPrice * redemptionPercent / 100);
            redemptionRub.textContent = formatCurrency(redemptionAmount);
            
            // Для стоимости авто всегда показываем 100%
            pricePercent.textContent = "100%";
        }

        // Расчет аннуитетного платежа
        function calculateAnnuity(principal, monthlyRate, months) {
            if (monthlyRate === 0) return principal / months;
            const coefficient = (monthlyRate * Math.pow(1 + monthlyRate, months)) / 
                               (Math.pow(1 + monthlyRate, months) - 1);
            return principal * coefficient;
        }

        // Функция для генерации графика платежей
        function generatePaymentSchedule(carPrice, monthlyPayment, termMonths, advanceAmount, redemptionAmount) {
            const schedule = [];
            let remainingBalance = carPrice - advanceAmount - redemptionAmount;
            const monthlyRate = 0.15 / 12; // 15% годовых
            
            for (let month = 1; month <= termMonths; month++) {
                schedule.push({
                    month: month,
                    payment: monthlyPayment,
                    remainingBalance: remainingBalance > 0 ? remainingBalance : 0
                });
                
                // Уменьшаем остаток долга
                const interestPayment = remainingBalance * monthlyRate;
                const principalPayment = monthlyPayment - interestPayment;
                remainingBalance -= principalPayment;
            }
            
            return schedule;
        }

        // Основная функция расчетов
        function calculateLeasing() {
            // Получаем значения
            const carPrice = parseFormattedNumber(priceInput.value);
            if (carPrice < 500000) {
                priceInput.value = '500 000';
                return;
            }
            
            // Получаем аванс (только проценты)
            const advancePercent = parseFloat(advanceSlider.value);
            const advanceAmount = carPrice * advancePercent / 100;
            
            // Получаем выкупной платеж (только проценты)
            let redemptionPercent = parseFloat(redemptionSlider.value);
            // Ограничиваем максимум 15%
            if (redemptionPercent > 15) {
                redemptionPercent = 15;
                redemptionSlider.value = redemptionPercent;
            }
            const redemptionAmount = carPrice * redemptionPercent / 100;
            
            const termMonths = parseFloat(termSlider.value);

            // Параметры (НДС 22% с 2026 года, налог на прибыль 25%)
            const vatRate = 0.22;          // НДС 22%
            const profitTaxRate = 0.25;    // Налог на прибыль 25%
            const annualRate = 0.15;       // Годовая ставка 15%
            const commissionRate = 0.08;   // Комиссия 8% годовых
            const insuranceRate = 0.05;    // Страховка 5% годовых
            const serviceFee = 50000;      // Единовременная комиссия
            const markup = 1.07;           // Надбавка 7% (скрыто от пользователя)

            // Расчет финансируемой суммы
            const financedAmount = carPrice - advanceAmount - redemptionAmount;
            if (financedAmount < 0) {
                // Если сумма отрицательная, корректируем выкупной платеж
                const newRedemptionAmount = carPrice - advanceAmount;
                const newRedemptionPercent = (newRedemptionAmount / carPrice * 100);
                if (newRedemptionPercent > 15) {
                    // Если все равно больше 15%, устанавливаем 15%
                    redemptionPercent = 15;
                    redemptionAmount = carPrice * redemptionPercent / 100;
                } else {
                    redemptionPercent = newRedemptionPercent;
                    redemptionAmount = newRedemptionAmount;
                }
                redemptionSlider.value = redemptionPercent.toFixed(2);
            }

            // Расчет ежемесячных компонентов
            const monthlyRate = annualRate / 12;
            const basePayment = calculateAnnuity(financedAmount, monthlyRate, termMonths);
            
            // Дополнительные расходы
            const insuranceMonthly = carPrice * insuranceRate / 12;
            const averageDebt = financedAmount / 2;
            const commissionMonthly = averageDebt * commissionRate / 12;
            
            // Базовая сумма платежа
            let baseMonthlyPayment = basePayment + insuranceMonthly + commissionMonthly + (serviceFee / termMonths);
            
            // Финальный платеж с учетом надбавки
            let finalMonthlyPayment = baseMonthlyPayment * markup;

            // Расчет общих сумм
            const totalMonthlyPayments = finalMonthlyPayment * termMonths;
            const totalContractAmount = advanceAmount + totalMonthlyPayments + redemptionAmount;

            // Расчет налоговой экономии
            const carPriceWithoutVAT = carPrice / (1 + vatRate);
            const vatInCarPrice = carPrice - carPriceWithoutVAT;
            
            // Экономия по налогу на прибыль (платежи идут в расходы)
            const paymentsWithoutVAT = totalMonthlyPayments / (1 + vatRate);
            const profitTaxSavings = paymentsWithoutVAT * profitTaxRate;
            
            // Общая налоговая экономия
            const totalTaxSavings = vatInCarPrice + profitTaxSavings;

            // Генерация графика платежей
            const paymentSchedule = generatePaymentSchedule(carPrice, finalMonthlyPayment, termMonths, advanceAmount, redemptionAmount);

            // Сохранение данных
            currentCalculation = {
                monthlyPayment: finalMonthlyPayment,
                totalTaxSavings: totalTaxSavings,
                vatSavings: vatInCarPrice,
                profitTaxSavings: profitTaxSavings,
                totalContractAmount: totalContractAmount,
                carPrice: carPrice,
                advancePercent: advancePercent,
                advanceAmount: advanceAmount,
                termMonths: termMonths,
                redemptionPercent: redemptionPercent,
                redemptionAmount: redemptionAmount,
                paymentSchedule: paymentSchedule
            };

            // Обновление интерфейса
            monthlyPaymentEl.textContent = formatCurrency(finalMonthlyPayment);
            taxSavingEl.textContent = formatCurrency(totalTaxSavings);
            ndsSaveEl.textContent = formatCurrency(vatInCarPrice);
            profitTaxSaveEl.textContent = formatCurrency(profitTaxSavings);
            totalAmountEl.textContent = formatCurrency(totalContractAmount);
            
            // Обновление отображаемых значений
            priceValue.textContent = formatCurrency(carPrice);
            advanceValue.textContent = advancePercent.toFixed(2) + '%';
            redemptionValue.textContent = redemptionPercent.toFixed(2) + '%';
            termValue.textContent = termMonths;
            
            // Обновление сумм в рублях под процентами
            updateAmountDisplays();
        }

        // Функция для копирования номера телефона
        function copyPhoneNumber() {
            const phoneNumber = '89990387395';
            navigator.clipboard.writeText(phoneNumber)
                .then(() => {
                    copySuccess.style.display = 'block';
                    setTimeout(() => {
                        copySuccess.style.display = 'none';
                    }, 2000);
                })
                .catch(err => {
                    console.error('Ошибка копирования: ', err);
                    // Альтернативный способ копирования
                    const textArea = document.createElement('textarea');
                    textArea.value = phoneNumber;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    
                    copySuccess.style.display = 'block';
                    setTimeout(() => {
                        copySuccess.style.display = 'none';
                    }, 2000);
                });
        }

        // Функция для отображения графика платежей
        function showPaymentSchedule() {
            const schedule = currentCalculation.paymentSchedule;
            let html = `
                <div style="margin-bottom: 20px; background: #f0f7ff; padding: 15px; border-radius: 10px;">
                    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px;">
                        <div>
                            <strong>Ежемесячный платеж:</strong><br>
                            ${formatCurrency(currentCalculation.monthlyPayment)}
                        </div>
                        <div>
                            <strong>Общая сумма договора:</strong><br>
                            ${formatCurrency(currentCalculation.totalContractAmount)}
                        </div>
                    </div>
                </div>
                
                <div style="overflow-x: auto;">
                    <table class="payment-table">
                        <thead>
                            <tr>
                                <th>Месяц</th>
                                <th>Платеж</th>
                            </tr>
                        </thead>
                        <tbody>`;
            
            schedule.forEach(item => {
                html += `
                    <tr>
                        <td class="month">${item.month}</td>
                        <td>${formatCurrency(item.payment)}</td>
                    </tr>`;
            });
            
            // В ИТОГО теперь показываем общую сумму договора (все платежи + аванс + выкуп)
            const totalContract = currentCalculation.totalContractAmount;
            
            html += `
                        </tbody>
                        <tfoot>
                            <tr class="total-row">
                                <td>ИТОГО за ${currentCalculation.termMonths} мес. (включая аванс и выкуп)</td>
                                <td>${formatCurrency(totalContract)}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
                <div style="margin-top: 20px; padding: 15px; background: #f8fafc; border-radius: 10px; font-size: 0.9rem; color: #4a5568;">
                    <strong>Внимание:</strong> Итоговая сумма включает все платежи по договору лизинга, включая аванс и выкупной платеж.
                </div>`;
            
            paymentScheduleContent.innerHTML = html;
            paymentModal.style.display = 'flex';
        }

        // Функция для генерации PDF с поддержкой кириллицы
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Добавляем кириллический шрифт (стандартный шрифт поддерживает кириллицу)
            // Используем стандартный шрифт, который поддерживает кириллицу
            doc.setFont("helvetica");
            doc.setFontSize(18);
            
            // Заголовок
            doc.text('График платежей по лизингу', 105, 20, { align: 'center' });
            
            doc.setFontSize(11);
            doc.text(`Дата формирования: ${new Date().toLocaleDateString('ru-RU')}`, 105, 30, { align: 'center' });
            
            // Параметры расчета
            doc.setFontSize(12);
            doc.text('Параметры расчета:', 20, 45);
            
            doc.setFontSize(10);
            let yPos = 55;
            doc.text(`• Стоимость авто: ${formatCurrency(currentCalculation.carPrice)}`, 25, yPos);
            yPos += 7;
            doc.text(`• Аванс: ${currentCalculation.advancePercent.toFixed(2)}% (${formatCurrency(currentCalculation.advanceAmount)})`, 25, yPos);
            yPos += 7;
            doc.text(`• Срок договора: ${currentCalculation.termMonths} мес.`, 25, yPos);
            yPos += 7;
            doc.text(`• Выкупной платеж: ${currentCalculation.redemptionPercent.toFixed(2)}% (${formatCurrency(currentCalculation.redemptionAmount)})`, 25, yPos);
            yPos += 7;
            doc.text(`• Ежемесячный платеж: ${formatCurrency(currentCalculation.monthlyPayment)}`, 25, yPos);
            yPos += 7;
            doc.text(`• Общая сумма договора: ${formatCurrency(currentCalculation.totalContractAmount)}`, 25, yPos);
            
            // Таблица графика платежей
            yPos += 15;
            
            // Подготавливаем данные для таблицы
            const tableData = currentCalculation.paymentSchedule.map(item => [
                item.month.toString(),
                formatCurrency(item.payment)
            ]);
            
            // Добавляем итоговую строку
            tableData.push([
                `ИТОГО за ${currentCalculation.termMonths} мес. (включая аванс и выкуп)`,
                formatCurrency(currentCalculation.totalContractAmount)
            ]);
            
            // Создаем таблицу с autotable
            doc.autoTable({
                startY: yPos,
                head: [['Месяц', 'Платеж']],
                body: tableData.slice(0, -1), // Все кроме последней строки
                foot: [tableData[tableData.length - 1]], // Последняя строка как футер
                headStyles: { 
                    fillColor: [44, 82, 130],
                    textColor: [255, 255, 255],
                    fontStyle: 'bold'
                },
                footStyles: { 
                    fillColor: [240, 247, 255],
                    textColor: [26, 58, 95],
                    fontStyle: 'bold'
                },
                styles: { 
                    fontSize: 10,
                    cellPadding: 5,
                    overflow: 'linebreak'
                },
                columnStyles: {
                    0: { cellWidth: 30 },
                    1: { cellWidth: 60, halign: 'right' }
                },
                margin: { left: 20, right: 20 },
                didDrawPage: function(data) {
                    // Добавляем примечание после таблицы
                    const finalY = data.cursor.y + 10;
                    if (finalY < 280) {
                        doc.setFontSize(9);
                        doc.setFontStyle('italic');
                        doc.text('Примечание: Итоговая сумма включает все платежи по договору лизинга, включая аванс и выкупной платеж.', 20, finalY, { maxWidth: 170 });
                    }
                }
            });
            
            // Сохранение PDF
            doc.save(`график_платежей_лизинг_${new Date().toISOString().split('T')[0]}.pdf`);
        }

        // Альтернативная функция для генерации PDF (более простая)
        function generatePDFAlternative() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Устанавливаем шрифт, который поддерживает кириллицу
            doc.setFont("helvetica");
            
            // Заголовок
            doc.setFontSize(18);
            doc.text("График платежей по лизингу", 105, 20, { align: "center" });
            
            doc.setFontSize(11);
            doc.text(`Дата формирования: ${new Date().toLocaleDateString('ru-RU')}`, 105, 30, { align: "center" });
            
            // Параметры расчета
            doc.setFontSize(12);
            doc.text("Параметры расчета:", 20, 45);
            
            doc.setFontSize(10);
            let y = 55;
            const params = [
                `Стоимость авто: ${formatCurrency(currentCalculation.carPrice)}`,
                `Аванс: ${currentCalculation.advancePercent.toFixed(2)}% (${formatCurrency(currentCalculation.advanceAmount)})`,
                `Срок договора: ${currentCalculation.termMonths} мес.`,
                `Выкупной платеж: ${currentCalculation.redemptionPercent.toFixed(2)}% (${formatCurrency(currentCalculation.redemptionAmount)})`,
                `Ежемесячный платеж: ${formatCurrency(currentCalculation.monthlyPayment)}`,
                `Общая сумма договора: ${formatCurrency(currentCalculation.totalContractAmount)}`
            ];
            
            params.forEach(param => {
                doc.text("• " + param, 25, y);
                y += 7;
            });
            
            // Таблица графика платежей
            y += 10;
            doc.setFontSize(12);
            doc.text("График платежей:", 20, y);
            y += 10;
            
            // Заголовок таблицы
            doc.setFontSize(10);
            doc.setFontStyle("bold");
            doc.text("Месяц", 25, y);
            doc.text("Платеж", 150, y, { align: "right" });
            y += 7;
            
            doc.setFontStyle("normal");
            doc.line(20, y, 190, y);
            y += 5;
            
            // Данные таблицы
            currentCalculation.paymentSchedule.forEach(item => {
                if (y > 270) {
                    doc.addPage();
                    y = 20;
                }
                doc.text(item.month.toString(), 25, y);
                doc.text(formatCurrency(item.payment), 150, y, { align: "right" });
                y += 7;
            });
            
            // Итоговая строка
            y += 5;
            doc.line(20, y, 190, y);
            y += 7;
            
            doc.setFontStyle("bold");
            doc.text(`ИТОГО за ${currentCalculation.termMonths} мес. (включая аванс и выкуп)`, 25, y);
            doc.text(formatCurrency(currentCalculation.totalContractAmount), 150, y, { align: "right" });
            
            // Примечание
            y += 15;
            doc.setFontStyle("italic");
            doc.setFontSize(9);
            doc.text("Примечание: Итоговая сумма включает все платежи по договору лизинга,", 20, y);
            y += 5;
            doc.text("включая Аванс и выкупной платеж.", 20, y);
            
            // Сохранение
            doc.save(`график_платежей_лизинг_${new Date().toISOString().split('T')[0]}.pdf`);
        }

        // Функция для печати
        function printSchedule() {
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <html>
                    <head>
                        <title>График платежей по лизингу</title>
                        <style>
                            @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
                            body { font-family: 'Roboto', Arial, sans-serif; padding: 20px; }
                            h1 { color: #1a3a5f; }
                            table { width: 100%; border-collapse: collapse; margin-top: 20px; }
                            th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
                            th { background-color: #f2f2f2; }
                            .total-row { font-weight: bold; background-color: #e6f3ff; }
                            .note { margin-top: 20px; padding: 10px; background: #f8fafc; border-radius: 5px; font-size: 0.9rem; color: #4a5568; }
                            @media print {
                                body { padding: 0; }
                                .no-print { display: none; }
                            }
                        </style>
                    </head>
                    <body>
                        <h1>График платежей по лизингу</h1>
                        <div style="margin-bottom: 20px;">
                            <strong>Дата генерации:</strong> ${new Date().toLocaleDateString('ru-RU')}<br>
                            <strong>Ежемесячный платеж:</strong> ${formatCurrency(currentCalculation.monthlyPayment)}<br>
                            <strong>Общая сумма договора:</strong> ${formatCurrency(currentCalculation.totalContractAmount)}
                        </div>
                        ${paymentScheduleContent.innerHTML}
                        <div class="no-print" style="margin-top: 20px; font-style: italic;">
                            Сгенерировано лизинговым калькулятором
                        </div>
                    </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.focus();
            printWindow.print();
        }

        // Настройка обработчиков событий
        function setupEventListeners() {
            // Обработчик для ввода стоимости авто
            priceInput.addEventListener('input', function(e) {
                this.value = formatMoneyInput(this.value);
                calculateLeasing();
            });
            
            priceInput.addEventListener('blur', function() {
                if (!this.value || parseFormattedNumber(this.value) < 500000) {
                    this.value = '500 000';
                }
                calculateLeasing();
            });

            // Обработчики для аванса
            advanceSlider.addEventListener('input', function() {
                const percent = parseFloat(this.value);
                advanceValue.textContent = percent.toFixed(2) + '%';
                updateAmountDisplays();
                calculateLeasing();
            });

            // Обработчики для срока
            termSlider.addEventListener('input', function() {
                termValue.textContent = this.value;
                calculateLeasing();
            });

            // Обработчики для выкупного платежа
            redemptionSlider.addEventListener('input', function() {
                let percent = parseFloat(this.value);
                // Ограничиваем максимум 15%
                if (percent > 15) {
                    percent = 15;
                    this.value = percent;
                }
                redemptionValue.textContent = percent.toFixed(2) + '%';
                updateAmountDisplays();
                calculateLeasing();
            });

            // Маска для телефона
            const phoneInput = document.getElementById('phone');
            phoneInput.addEventListener('input', function(e) {
                let x = e.target.value.replace(/\D/g, '').match(/(\d{0,1})(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2})/);
                e.target.value = !x[2] ? x[1] : '+7 (' + x[2] + ') ' + x[3] + (x[4] ? '-' + x[4] : '') + (x[5] ? '-' + x[5] : '');
            });

            // Фокус на поле телефона
            phoneInput.addEventListener('focus', function() {
                if (this.value === '+7 (') {
                    this.setSelectionRange(4, 4);
                }
            });

            // Обработчики для кнопок отправки и сохранения
            sendToTelegramBtn.addEventListener('click', sendToTelegram);
            callBtn.addEventListener('click', function() {
                phoneModal.style.display = 'flex';
            });
            saveScheduleBtn.addEventListener('click', showPaymentSchedule);
            
            // Обработчики модального окна графика
            closeModal.addEventListener('click', function() {
                paymentModal.style.display = 'none';
            });
            
            paymentModal.addEventListener('click', function(e) {
                if (e.target === paymentModal) {
                    paymentModal.style.display = 'none';
                }
            });
            
            // Используем альтернативную функцию для PDF
            downloadPdfBtn.addEventListener('click', generatePDFAlternative);
            printScheduleBtn.addEventListener('click', printSchedule);
            
            // Обработчики модального окна телефона
            copyPhoneBtn.addEventListener('click', copyPhoneNumber);
            closePhoneModal.addEventListener('click', function() {
                phoneModal.style.display = 'none';
            });
            
            phoneModal.addEventListener('click', function(e) {
                if (e.target === phoneModal) {
                    phoneModal.style.display = 'none';
                }
            });
            
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    paymentModal.style.display = 'none';
                    phoneModal.style.display = 'none';
                }
            });
        }

        // Функция для отправки в Telegram
        function sendToTelegram() {
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const inn = document.getElementById('inn').value;
            
            if (!name || !phone) {
                alert('Пожалуйста, заполните обязательные поля: имя и телефон');
                return;
            }
            
            const message = `Здравствуйте! Я хочу рассчитать лизинг:

💼 *Параметры расчета:*
• Стоимость авто: ${formatCurrency(currentCalculation.carPrice)}
• Аванс: ${currentCalculation.advancePercent.toFixed(2)}% (${formatCurrency(currentCalculation.advanceAmount)})
• Срок договора: ${currentCalculation.termMonths} мес.
• Выкупной платеж: ${currentCalculation.redemptionPercent.toFixed(2)}% (${formatCurrency(currentCalculation.redemptionAmount)})

📊 *Результаты расчета:*
• Ежемесячный платеж: ${formatCurrency(currentCalculation.monthlyPayment)}
• Налоговая экономия: ${formatCurrency(currentCalculation.totalTaxSavings)}
• Общая сумма договора: ${formatCurrency(currentCalculation.totalContractAmount)}

👤 *Мои данные:*
• Имя: ${name}
• Телефон: ${phone}
${inn ? `• ИНН: ${inn}` : ''}

Хочу получить подробное коммерческое предложение!`;

            const encodedMessage = encodeURIComponent(message);
            const telegramUrl = `https://t.me/YWeliQ?text=${encodedMessage}`;
            
            window.open(telegramUrl, '_blank');
        }

        // Инициализация при загрузке
        document.addEventListener('DOMContentLoaded', function() {
            // Инициализация ИНН
            const innInput = document.getElementById('inn');
            innInput.addEventListener('input', function() {
                this.value = this.value.replace(/\D/g, '').slice(0, 12);
            });
            
            // Настройка обработчиков событий
            setupEventListeners();
            
            // Первоначальный расчет
            calculateLeasing();
            
            // Установка курсора в поле телефона
            const phoneInput = document.getElementById('phone');
            phoneInput.value = '+7 (';
            setTimeout(() => {
                phoneInput.focus();
                phoneInput.setSelectionRange(4, 4);
            }, 100);
        });
    </script>
</body>
</html>
