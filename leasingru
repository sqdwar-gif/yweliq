            redemptionAmount: 0,
            paymentSchedule: []
        };

        // Получаем элементы
        const priceInput = document.getElementById('priceInput');
        const priceValue = document.getElementById('priceValue');
        const pricePercent = document.getElementById('pricePercent');
        
