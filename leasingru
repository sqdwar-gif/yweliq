    <script>
        // Глобальные переменные для хранения данных расчета
        let currentCalculation = {
            monthlyPayment: 0,
            totalTaxSavings: 0,
            vatSavings: 0,
            profitTaxSavings: 0,
            totalContractAmount: 0,
            carPrice: 0,
            advancePercent: 0,
            advanceAmount: 0,
            termMonths: 0,
